# ===================================
# Donna.ai Environment Configuration
# ===================================
# Copy this file to .env and fill in your actual credentials
# NEVER commit the .env file to version control

# ===================================
# LiveKit Configuration
# ===================================
LIVEKIT_URL=wss://your-livekit-instance.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# ===================================
# Twilio Configuration
# ===================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===================================
# Groq Configuration (Free LLM, TTS, STT)
# ===================================
# Get your free API key from https://console.groq.com
GROQ_API_KEY=your_groq_api_key
CARTESIA_API_KEY=your_cartesia_api_key
# ===================================
# Gemini AI Configuration (Free Email Analysis)
# ===================================
# Get your free API key from https://aistudio.google.com/apikey
# Free tier: 1,500 requests per day
GEMINI_API_KEY=your_gemini_api_key

# ===================================
# Google API Configuration
# ===================================
# Google Custom Search for organization lookup
GOOGLE_API_KEY=your_google_custom_search_api_key
GOOGLE_CSE_ID=your_custom_search_engine_id

# Google OAuth2 credentials (Gmail, Calendar)
# These are loaded from credentials/client_secret.json
# Download from Google Cloud Console
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Session Security for Web Portal
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# ===================================
# Application Configuration
# ===================================
# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Agent configuration
AGENT_NAME=Donna
CHECK_INTERVAL=300  # seconds

# Timezone
TIMEZONE=America/Phoenix

# ===================================
# Logging Configuration
# ===================================
LOG_LEVEL=INFO
LOG_DIR=logs
